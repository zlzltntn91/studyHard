<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>


    <servlet>
        <!--        설정 파일 이름은 반드시 servlet-name 값으로 시작해야함  (action-servlet.xml)-->
        <servlet-name>action</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <!--        값이 1 이상이면 톰켓 실행시 DispatcherServlet을 미리 메모리에 로드함 (지정하지 않거나 음수로 지정하면 브라우저에서 요청시 메모리에 로드함) -->
        <load-on-startup>1</load-on-startup>
    </servlet>
    <!--    브라우저에서 *.do로 요청하면 스프링의 DispathcerServlet 클래스가 요청을 받을 수 있게 서블릿 매핑을 설정함-->
    <servlet-mapping>
        <servlet-name>action</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>

</web-app>